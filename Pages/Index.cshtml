@page
@model IndexModel
@using RockPaperScissors.Model
@using RockPaperScissors.Services
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">RPS The game</h1>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <div class="col-12">
        <p>Remízy: @Model.GameD.Draw</p>
        <p>Vítězství: @Model.GameD.Wins</p>
        <p>Prohry: @Model.GameD.Loss</p>
    </div></br>@if (Model.GameD.Player != Choice.None && Model.GameD.Computer != Choice.None)
    {
        <p class="col-12">@Model.GameD.Player vs. @Model.GameD.Computer</p>
    }
    <form method="post">
        <input type="hidden" asp-for="GameD.Round" value="@Model.GameD.Round" />
        <input type="hidden" asp-for="GameD.Wins" value="@Model.GameD.Wins" />
        <input type="hidden" asp-for="GameD.Loss" value="@Model.GameD.Loss" />
        <div class="row">
            <div class="form-check col-4">
                <input class="form-check-input" type="radio" asp-for="Player" value="@Choice.Rock">
                <label class="form-check-label" asp-for="@Model.Player">
                    Kámen
                </label>
            </div>
            <div class="form-check col-4">
                <input class="form-check-input" type="radio" asp-for="Player" value="@Choice.Paper">
                <label class="form-check-label" asp-for="@Model.Player">
                    Papír
                </label>
            </div>
            <div class="form-check col-4">
                <input class="form-check-input" type="radio" asp-for="Player" value="@Choice.Scissors">
                <label class="form-check-label" asp-for="@Model.Player">
                    Nožnice
                </label>
            </div></br>
        </div>
        <div class="row">
            @if (Model.GameD.Player == Choice.Paper)
            {<div class="col-6 m-0 m-0">
                    <figure>
                        <img src="~/paper.svg" width="100" height="100" />
                        <figcaption>Volba Hráče</figcaption>
                    </figure>
                </div>
            }
            @if (Model.GameD.Player == Choice.Rock)
            {
                <div class="col-6 m-0">
                    <figure>
                        <img src="~/rock.svg" width="100" height="100" />
                        <figcaption>Volba Hráče</figcaption>
                    </figure>
                </div>
            }
            @if (Model.GameD.Player == Choice.Scissors)
            {
                <div class="col-6 m-0">
                    <figure>
                        <img src="~/scissors.svg" width="100" height="100" />
                        <figcaption>Volba Hráče</figcaption>
                    </figure>
                </div>
            }
            @if (Model.GameD.Computer == Choice.Paper)
            {
                <style>
                    #svgC1 {
                        -webkit-transform: scaleX(-1);
                        transform: scaleX(-1);
                    }
                </style>
                <div class="col-6 m-0">
                    <figure>
                        <img src="~/paper.svg" width="100" height="100" id="svgC1" />
                        <figcaption>Volba počítače</figcaption>
                    </figure>
                </div>
            }
            @if (Model.GameD.Computer == Choice.Rock)
            {
                <style>
                    #svgC2 {
                        -webkit-transform: scaleX(-1);
                        transform: scaleX(-1);
                    }
                </style>
                <div class="col-6 m-0">
                    <figure>
                        <img src="~/rock.svg" width="100" height="100" id="svgC2" />
                        <figcaption>Volba počítače</figcaption>
                    </figure>
                </div>
            }
            @if (Model.GameD.Computer == Choice.Scissors)
            {
                <style>
                    #svgC3 {
                        -webkit-transform: scaleX(-1);
                        transform: scaleX(-1);
                    }
                </style>
                <div class="col-6 m-0">
                    <figure>
                        <img src="~/scissors.svg" width="100" height="100" id="svgC3" />
                        <figcaption>Volba počítače</figcaption>
                    </figure>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary text-center">Play</button>
    </form>
</div>
